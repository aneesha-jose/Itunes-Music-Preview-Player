<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".searchTracks.SearchTracksActivity">

    <RelativeLayout
        android:id="@+id/rl_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="@dimen/_16dp">

        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_gray_rounded_corners"
            android:drawableLeft="@drawable/search"
            android:drawablePadding="@dimen/_8dp"
            android:hint="@string/search_music_title_artist_movie"
            android:imeOptions="actionSearch"
            android:padding="@dimen/_10dp"
            android:shadowColor="@color/shadow_gray"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"
            android:textSize="@dimen/text_small" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_total_count"
        style="@style/NormalMediumFaded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_search"
        android:gravity="center_vertical"
        android:padding="@dimen/_8dp"
        android:paddingLeft="@dimen/_16dp"
        android:paddingStart="@dimen/_16dp"
        android:text="@string/all_tracks" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_track_blocks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rv_page_indicator"
        android:layout_below="@id/tv_total_count"
        android:orientation="horizontal"
        tools:listitem="@layout/item_track_block" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_page_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_8dp"
        android:layout_marginEnd="@dimen/_16dp"
        android:layout_marginLeft="@dimen/_16dp"
        android:layout_marginRight="@dimen/_16dp"
        android:layout_marginStart="@dimen/_16dp"
        android:orientation="horizontal"
        tools:listitem="@layout/item_indicator" />
</RelativeLayout>