<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_8dp"
    android:layout_marginEnd="@dimen/_16dp"
    android:layout_marginLeft="@dimen/_16dp"
    android:layout_marginRight="@dimen/_16dp"
    android:layout_marginStart="@dimen/_16dp"
    android:background="@color/white"
    app:cardCornerRadius="@dimen/_2dp"
    app:elevation="@dimen/_3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_8dp">

        <ImageView
            android:id="@+id/track_image"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_60dp"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/shape" />

        <TextView
            android:id="@+id/tv_track_name"
            style="@style/NormalMediumGeneral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8dp"
            android:layout_marginStart="@dimen/_8dp"
            android:layout_toEndOf="@+id/track_image"
            android:layout_toRightOf="@+id/track_image"
            android:maxLines="1"
            android:textColor="@android:color/black"
            tools:text="We Don't Talk Anymore" />

        <TextView
            android:id="@+id/tv_track_info"
            style="@style/NormalMediumFaded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_track_name"
            android:layout_marginLeft="@dimen/_8dp"
            android:layout_marginStart="@dimen/_8dp"
            android:layout_marginTop="@dimen/_neg2dp"
            android:layout_toEndOf="@+id/track_image"
            android:layout_toRightOf="@+id/track_image"
            android:maxLines="1"
            tools:text="Charlie Puth | We Don't Talk Anymore" />
    </RelativeLayout>

</android.support.v7.widget.CardView>