<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".splash.SplashActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_16dp"
            android:background="@drawable/bg_gray_rounded_corners"
            android:drawableLeft="@drawable/search"
            android:drawablePadding="@dimen/_8dp"
            android:hint="@string/search_music_title_artist_movie"
            android:maxLines="1"
            android:padding="@dimen/_10dp"
            android:shadowColor="@color/shadow_gray"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"
            android:textSize="@dimen/text_small"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_16dp"
            android:gravity="center"
            android:text="@string/listen_to_fav_from_itunes"
            android:textColor="@color/white"
            android:textSize="@dimen/text_normal" />

        <include
            android:id="@+id/list_item"
            layout="@layout/item_track_layout"
            android:visibility="invisible" />


    </LinearLayout>

</RelativeLayout>